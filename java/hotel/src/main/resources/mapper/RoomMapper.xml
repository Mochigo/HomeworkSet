<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homework.hotel.mapper.RoomMapper">
    <insert id="Insert" parameterType="com.homework.hotel.pojo.Room">
        INSERT INTO room(name, type, price, status)
        VALUES (#{name}, #{type}, ${rprice}, #{status})
    </insert>

    <select id="ListEmptyRooms" resultType="com.homework.hotel.pojo.Room">
        SELECT *
        FROM room
        WHERE status = 'empty'
    </select>

    <select id="ListAllRooms" resultType="com.homework.hotel.pojo.Room">
        SELECT *
        FROM room
    </select>

    <select id="SelectByCount" resultType="Integer">
        SELECT COUNT(*)
        FROM room
    </select>
</mapper>